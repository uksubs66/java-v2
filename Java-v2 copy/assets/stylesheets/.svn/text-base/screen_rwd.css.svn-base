@media only screen and ( max-width: 880px )
{
    #rwdScreenMode {
        max-width:880px;
    }
}
@media only screen and ( max-width: 800px )
{
    #rwdScreenMode {
        max-width:800px;
    }
    /* Main nav */
    #top {
        display: none;
    }
    #rwdNavBlock {
        background-color: #fff;
        line-height: 40px;
        height:40px;
    }
    #rwdNav
    {
        display: none;
    }
    #rwdNav2
    {
        display: block;
    }
    #rwdNavLogo {
        display:block;
    }
    #main_ftlogo {
        display:none;
    }
    /* Sub nav */
    #subnav {
    text-align: center;
        margin-top: 10px;
    }
    
    /* banner */
    #main_ftlogo, #rwdBannerLogo {
        display:none;
    }
    .banner_container .welcome_member  {
        position:absolute;
        right:0px;
        top:0px;
        margin-right: 10px;
        line-height: 40px;
        height: 40px;
    }
    
    /* Content */
    #tt1_right, #tt1_left, .left_container {
        float:inherit;
        cleat:inherit;
        margin:0;
        width:auto;
    }
    /* Help/Info */
    .pageHelp {
        display: none;
    }
    .pageHelpHeader {
        display: block;
    }
    
}

@media only screen and ( max-width: 640px )
{
    #rwdScreenMode {
        max-width:640px;
    }
    div.announcement_container div.widget_list_left {
        width: auto;
        float: none;
        margin: 0;
        overflow: hidden;
    }
    /* Banner */
    #pageHeader.hasSubNav .banner_container .rwd_banner {

    }
}


@media only screen and ( max-width: 580px )
{
    #rwdScreenMode {
        max-width:580px;
    }
    /* Banner */
    .banner_container .rwd_banner, #rwdBannerLogo {
        height: 60px;
    }
    .hasBanner #subnav {
        margin-top: 30px;
    }
    .banner_container #title {
        font-size:16px;
    }
    .banner_container #title, .banner_container .welcome_member  {
        line-height: 30px;
        height: 30px;
    }
    .banner_container .welcome_member span:first-child {
        display:none;
    }
    .banner_container:after {
        height: 60px;
    }
    #breadcrumb {
        font-size:14px;
    }
}


@media only screen and ( max-width: 480px )
{
    #rwdScreenMode {
        max-width:480px;
    }
    /* Banner */

    /* sub nav */
    .mediumActivityList #subnav > ul {
        display:none;
    }
    .mediumActivityList #subNavSelect {
        display:inline-block;
    }
}

@media only screen and ( max-width: 420px )
{
    #rwdScreenMode {
        max-width:420px;
    }
    /* Banner */
    #pageHeader.hasSubNav .banner_container .rwd_banner {
        text-align: center;
    }
    .banner_container .welcome_member  {
        display:none;
    }
    /* sub nav */
    .mediumActivityList #subnav > ul {
        display:none;
    }
    .mediumActivityList #subNavSelect {
        display:inline-block;
    }
    /* Content */
    
}

@media only screen and ( max-width: 400px )
{
    #rwdScreenMode {
        max-width:400px;
    }
    /* Banner */
    .banner_container #title {

    }
    /* sub nav */
    .smallActivityList #subnav > ul {
        display:none;
    }
    .smallActivityList #subNavSelect {
        display:inline-block;
    }

}
