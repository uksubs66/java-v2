body.white_center {
    background-color: #ffffff;
}

body.white_center p {
    line-height: 200%;
}

body.white_center form[action="Proshop_announce"] table[align="center"] {
    display:block;
    margin:auto;
    margin-bottom: 30px;
}

textarea.text_editor.advanced {
    width: 100%;
    display: none;
}


/* Fields, labels, datepickers, etc.  */
label input.ft_date_picker_field {
    line-height: 16px;
    width: 100px;
    font-weight: bold; 
    border: 1px solid grey;
    background-color: #fff;
    color: #000;
    margin:0;
    padding: 2px;
    padding-left:5px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    -webkit-user-select: none; /* Stop mobile safari from displaying copy/cut/paste dialog along with datepicker */
}

label:hover input.ft_date_picker_field {
    -moz-box-shadow: 0px 0px 15px #0099ff;
    -webkit-box-shadow: 0px 0px 15px #0099ff;
    box-shadow: 0px 0px 15px #0099ff;
}

input.ft_date_picker_field.ftWarn {
    background-color: #f00;
}

label input.ft_date_picker_field+button.ui-datepicker-trigger {
    margin:0;
    border:none;
    padding:0;
    width:16px;
    line-height: 0px;
    position:relative;
    margin-left: -19px;
    margin-right: 3px;
    top:3px;
    
}

label input.ft_date_picker_field+button.ui-datepicker-trigger img {
    display:block;
    margin:0;
    border:none;
    padding:0;
}

.ui-datepicker {
    font-size: 100%;
}
.ui-datepicker-buttonpane .ui-datepicker-current {
    display:none;
}

